{% autoescape false %}
{
{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    "success": true,
    "user":
        {{ app.user.getDocument|json_encode }},
{% else %}
    "success": false,
    "user": null,
{% endif %}
    "message": "{% for type, messages in app.session.flashbag.all() %}{% for message in messages %}{{ message }}; {% endfor %}{% endfor %}"
}
{% endautoescape %}